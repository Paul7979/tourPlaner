<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" prefHeight="300" prefWidth="300" vgap="10" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.technikum.views.TourLogDetailsViewController">

    <columnConstraints>
        <ColumnConstraints minWidth="-Infinity" />
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
      <RowConstraints />
    </rowConstraints>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Label GridPane.columnSpan="4" GridPane.halignment="CENTER" GridPane.rowIndex="0">Show Log</Label>

    <Label GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="1">Report</Label>
    <TextField fx:id="report" disable="true" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="LEFT" GridPane.rowIndex="1" />

    <Label GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="2">Distance</Label>
    <TextField fx:id="distance" disable="true" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="LEFT" GridPane.rowIndex="2" />

    <Label GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="3">Total Time</Label>
    <TextField fx:id="totalTime" disable="true" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="LEFT" GridPane.rowIndex="3" />

    <Label GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="4">Rating</Label>
    <TextField fx:id="rating" disable="true" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="LEFT" GridPane.rowIndex="4" />

    <Label GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="5">Average Speed</Label>
    <TextField fx:id="averageSpeed" disable="true" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="LEFT" GridPane.rowIndex="5" />

    <Label GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="6">Type of Transport</Label>
    <TextField fx:id="typeOfTransport" disable="true" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="LEFT" GridPane.rowIndex="6" />

    <Label GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="7">Difficulty</Label>
    <TextField fx:id="difficulty" disable="true" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="LEFT" GridPane.rowIndex="7" />

    <Label GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="8">Recommended People</Label>
    <TextField fx:id="recommendedPeopleCount" disable="true" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="LEFT" GridPane.rowIndex="8" />

    <Label GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="9">Date</Label>
   <TextField fx:id="date" disable="true" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="9" />


    <GridPane GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.halignment="CENTER" GridPane.rowIndex="10" GridPane.valignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints vgrow="ALWAYS" />
        </rowConstraints>

        <Button onAction="#close" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER">Close</Button>

    </GridPane>

</GridPane>
